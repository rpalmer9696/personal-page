---
type Props = {
    title: string;
    description: string;
    websiteLink: string;
    githubLink: string;
};

const { title, description, websiteLink, githubLink } = Astro.props as Props;
---

<div class="rounded p-4 bg-white/60 flex flex-col gap-2">
    <h3 class="text-2xl">{title}</h3>
    <p>{description}</p>
    <div class="flex flex-row gap-4 mt-auto">
        <a class="text-blue-500" href={websiteLink} target="_blank">Website</a>
        <a class="text-blue-500" href={githubLink} target="_blank">GitHub</a>
    </div>
</div>
